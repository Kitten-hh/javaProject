<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jq.dao.ex.UserMapperEX">
    <resultMap id="BaseResultMap" type="com.jq.pojo.TJquser">
        <id column="user_id" jdbcType="BIGINT" property="user_id" />
        <result column="user_name" jdbcType="VARCHAR" property="user_name"/>
        <result column="user_code" jdbcType="VARCHAR" property="user_code" />
        <result column="user_password" jdbcType="VARCHAR" property="user_password" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="firstLogin" jdbcType="INTEGER" property="firstLogin" />
    </resultMap>
    <sql id="Base_Column_List">
    user_id, user_name, user_code, user_password,depRole,status,workNum,firstLogin
    </sql>

    <select id="getUserByLogin" resultType="com.jq.pojo.KittenUser">
        select <include refid="Base_Column_List" /> from kitten_user
        where user_code=#{userCode} and user_password=#{userPassword}
    </select>

    <select id="getUserList" resultType="com.jq.pojo.KittenUser">
        select <include refid="Base_Column_List" /> from kitten_user
        <where>
            <if test="sname != null">
                user_name like '%'+ convert (varchar,#{sname})+'%'
            </if>
        </where>
    </select>

    <select id="getUserCount" resultType="java.lang.Integer">
        select count(user_id) from kitten_user
        <where>
            <if test="sname != null">
                user_name like '%'+ convert (varchar,#{sname})+'%'
            </if>
        </where>
    </select>

    <select id="checkPwd" resultType="java.lang.Integer">
        select count(1) from kitten_user where user_id = #{uid} and user_password = #{pwd}
    </select>

    <update id="updatePwd">
        update kitten_user set user_password = #{pwd},firstLogin = #{firstLogin} where user_id = #{uid}
    </update>

    <update id="updateFirstLogin">
        update kitten_user set firstLogin = 1 where user_id = #{uid}
    </update>

    <update id="updateStatus">
        update kitten_user set status = #{status} where user_id = #{uid}
    </update>
    
    
    <select id="getUserById" resultType="com.jq.pojo.KittenUser">
        select * from kitten_user where user_id = #{uid}
    </select>
    
</mapper>